{
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "network", "filter"],
  "properties": {
    "id": {
      "description": "Internal ID to assign this feed to",
      "type": "string"
    },
    "network": {
      "description": "Social network to fetch feed from",
      "type": "string"
    },
    "filter": {
      "description": "What to fetch",
      "type": "object",
      "properties": {
        "account": {
          "description": "Read feed from this account",
          "type": "string"
        },
        "hashtags": {
          "description": "Array of hashtags to watch",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
