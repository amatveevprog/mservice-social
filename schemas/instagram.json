{
  "$id": "instagram.json",
  "definitions": {
    "accountId": {
      "type": "string",
      "description": "Identificator of `instagram` account"
    },
    "registerFeed": {
      "description": "Register a batch of accounts",
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "username", "token"],
        "properties": {
          "id": {
            "$ref": "#/definitions/accountId"
          },
          "username": {
            "description": "User name",
            "type": "string"
          },
          "token": {
            "type": "string",
            "description": "User token"
          }
        }
      }
    },
    "config": {
      "type": "object",
      "required": ["enabled"],
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "syncMediaOnStart": {
          "type": "boolean",
          "default": true
        },
        "subscribeOnStart": {
          "type": "boolean",
          "default": true
        },
        "client": {
          "type": "object",
          "required": ["id", "secret"],
          "additionalProperties": false,
          "properties": {
            "id": {
              "type": "string"
            },
            "secret": {
              "type": "string"
            }
          }
        },
        "subscriptions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["object", "type", "verifyToken", "callbackUrl"],
            "additionalProperties": false,
            "properties": {
              "object": {
                "type": "string",
                "enum": ["user"]
              },
              "type": {
                "type": "string",
                "enum": ["media"]
              },
              "verifyToken": {
                "type": "string"
              },
              "callbackUrl": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
